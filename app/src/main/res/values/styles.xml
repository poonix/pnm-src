<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
        <!-- <item name="android:background">@android:color/transparent</item> -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_inverse</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_inverse</item>
        <item name="android:textColorHint">@color/grey_text</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyNoActionBarShadowTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <!--
        <item name="android:windowBackground">@drawable/ic_pnm</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">40dp</item>
        -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NavigationView">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:listDivider">@color/grey_light</item>
        <item name="android:textColorSecondary">@color/grey_text</item>
        <item name="listPreferredItemPaddingRight">50dp</item>
        <item name="android:alignmentMode">alignMargins</item>
    </style>


    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <!--
    <style name="CustomHint" parent="@style/Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textColorHint">@color/grey_text</item>
    </style>

    <style name="CustomHintMandatory" parent="@style/Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/red_text</item>
        <item name="android:textColorHint">@color/red_text</item>
    </style>
    -->

    <style name="searchSpinnerTheme" parent="AppTheme">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
        <item name="android:dropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:background">@color/light_green</item>
    </style>

</resources>

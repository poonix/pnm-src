<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saifullah_albasrie.pnm.ui.fragment.ProspekTabLainnyaFragment">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/white_trans"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hint_kode_usaha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Kode Usaha (SID)"
                android:textColor="@color/grey_text"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <Spinner
                android:id="@+id/spinner_kode_usaha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/array_init"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/white_trans"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hint_bidang_usaha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Kode Bidang Usaha"
                android:textColor="@color/grey_text"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <Spinner
                android:id="@+id/spinner_kode_bidang_usaha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/array_init"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/white_trans"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_hint_hub_debitur_pnm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Hubungan Debitur Dengan PNM"
                android:textColor="@color/grey_text"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <Spinner
                android:id="@+id/spinner_hub_debitur_pnm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/array_init"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/white_trans"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hint_hub_debitur_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Hubungan Debitur Dengan Bank"
                android:textColor="@color/grey_text"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <Spinner
                android:id="@+id/spinner_hub_debitur_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/array_init"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" />

        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
